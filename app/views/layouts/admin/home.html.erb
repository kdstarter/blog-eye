<!DOCTYPE html>
<html>
<head>
  <%= page_title_tag %>
  <%= stylesheet_link_tag    'admin/home', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'admin/home', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <%= render partial: 'layouts/shared/topbar' %>
  <%= render partial: 'layouts/admin/hero_content' %>

  <div class="container">
    <div class="row-fluid">
      <div class="col-md-9" role="main">
        <%= render partial: 'layouts/shared/flash' %>
        <%= yield %>
      </div>

      <div class="col-md-3">
        <%= render partial: 'layouts/admin/rightbar' %>
      </div>
    </div>
  </div><!-- /.container -->

  <%= render partial: 'layouts/shared/footer' %>

</body>
</html>
