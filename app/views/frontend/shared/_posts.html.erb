
<div class="blog-posts">
  <% posts.each do |post| %>
    <div class="blog-post">
      <div class="blog-post-title">
        <%= link_to omited_str(post.title), frontend_post_path(post) %>
      </div>

      <p class="blog-post-meta">
        <%= post.published_time %>
        <%= post_tags_from_str(post.tags) %>
      </p>

      <div class="blog-post-content">
        <%= omited_str(post.content, 150) %>
      </div>
    </div>
  <% end %>

  <div class="pager">
    <%= paginate posts %>
  </div>
</div>
