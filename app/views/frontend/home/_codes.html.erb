
<div class="code-posts">
  <h4>最近的代码分享: </h4>
  <% if codes.size > 0 %>
    <% codes.each do |code| %>
      <div class="newer_row code-post">
        <div class="post-user pull-left">
          <a target="_blank" href="<%= frontend_path(code.user) %>">
            <%= image_tag(code.user.avatar_url(:thumb), class: 'user_face') %>
          </a>
        </div>

        <div class="href_name post-title">
          <%= link_to code.title, frontend_code_path(code.user, code), title: code.title %>
        </div>
        <p class="post-meta">
          <%= link_to code.user.human_name, frontend_path(code.user), target: "_blank" %>
           · 
          <abbr class="timeago" title="<%= code.published_time %>">
            <%= time_ago_in_words(code.created_at) %>前
          </abbr> 收藏
        </p>

        <div class="post-content display_none">
          <%#= code.content.html_safe %>
        </div>
      </div>
    <% end %>
  <% else %>
    最近没有任何文章。
  <% end %>
</div>
