
<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>标题</th>
        <th>分类</th>
        <th>语言</th>
        <th>标签</th>
        <th>管理</th>
      </tr>
    </thead>

    <tbody>
      <% codes.each do |code| %>
        <tr>
          <td>
            <%= link_to code.title, admin_code_path(code), title: code.title, class: "href_name" %>
          </td>
          <td><%= code.category.name %></td>
          <td><%= code.language.code %></td>
          <td><%= code.tags %></td>
          <td>
            <%= link_to '编 辑', edit_admin_code_path(code), class: "btn btn-xs btn-primary" %>
            <%= link_to '删 除', admin_code_path(code), data: { confirm: "你确定要删除这篇文章吗？" }, method: :delete, class: "btn btn-xs btn-danger" %>
          </td>
        </tr>
      <% end %>

      <tr>
        <td colspan='4'><%= paginate codes %></td>
        <td colspan='2' class="text_middle">
          <div class="pull-right">
            <%= link_to('查看所有', admin_codes_path) unless url_for == admin_codes_path %>
          </div>
        </td>
      </tr>
    </tbody>
  </table>
</div>
