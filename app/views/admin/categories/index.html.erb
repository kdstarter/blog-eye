<div class="row">
  <div class="col-xs-9">
    <label>博客分类管理: </label>
  </div>

  <div class="col-xs-3 text-right">
    <%= link_to "添加新分类", "#", class: "link_new_category" %>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 template_new_category display_none">
    <%= simple_form_for [:admin, Category.new], html: { class: "form-inline form_new_category" } do |f| %>
      <%= f.input_field :name, class: "form-control" %>
      <%= f.input_field :description, class: "form-control" %>

      <%= f.button :submit, "添 加", class: "btn btn-primary btn_create_category" %>
    <% end %>
  </div>
</div>

<% if @category.present? %>
  <div class="row">
    <div class="col-xs-12 template_edit_category">
      <%= simple_form_for [:admin, @category], html: { class: "form-inline form_edit_category" } do |f| %>
        <%= f.input_field :name, class: "form-control" %>
        <%= f.input_field :description, class: "form-control" %>

        <%= f.button :submit, "修 改", class: "btn btn-primary btn_update_category" %>
      <% end %>
    </div>
  </div>
<% end %>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>名称</th>
        <th>文章数量</th>
        <th>描述</th>
        <th>创建时间</th>
        <th>管理</th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td>
            <%= link_to category.name, admin_category_path(category), class: "category_#{category.name}" %>
          </td>
          <td><%= category.posts.size %></td>
          <td><%= omited_str(category.description) %></td>
          <td><%= category.created_time %></td>
          <td>
            <%= link_to "编 辑", edit_admin_category_path(category), class: "btn btn-xs btn-primary link_edit_category" %>
            <%= link_to "删 除", admin_category_path(category), data: { confirm: "你确定要删除这个分类吗？" }, method: :delete, remote: true, class: "btn btn-xs btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<script type="text/javascript">
  $(function(){
    new CategoryListView({
      el: $("#main_content")
    });
  });
</script>
